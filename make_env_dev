# !/usr/bin/env bash
# -*-: coding: utf-8 -*-

ENV_DIR="py3"

echo "Creating New Python 3(>= 3.4) Environment: $ENV_DIR"
python3 -m venv --clear $ENV_DIR
if [[ $? -eq 0 ]];
then
    source $ENV_DIR/bin/activate && pip install --upgrade pip && pip install setuptools wheel twine
    echo "✅Completed!"
else
    echo "❗️Failed!"
fi